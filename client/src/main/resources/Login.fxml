<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>

<GridPane fx:controller="pl.hellothere.client.view.login.ClientViewLoginController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <HBox alignment="center"
          GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
        <Label id="title" text="Hello There" />
    </HBox>

    <Label text="Login:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <TextField fx:id="loginField" promptText="Enter Login"
            GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <PasswordField fx:id="passwordField" promptText="Enter Password"
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <HBox fx:id="resultPromptBox" spacing="10" alignment="center"
          GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2">
    </HBox>

    <HBox spacing="10" alignment="center"
          GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2">
        <Button text="Sign In"
                onAction="#handleSignInButtonAction"/>
    </HBox>

    <stylesheets>
        <URL value="@LoginGrey.css" />
    </stylesheets>

</GridPane>